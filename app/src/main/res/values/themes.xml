<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SeriesDatabase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_blue_400</item>
        <item name="colorPrimaryVariant">@color/md_blue_600</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_teal_200</item>
        <item name="colorSecondaryVariant">@color/md_teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="backgroundColor">@color/md_grey_400</item>
        <item name="cardBackgroundColor">@color/md_grey_200</item>
    </style>

    <style name="Theme.SeriesDatabase.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SeriesDatabase.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SeriesDatabase.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.SeriesDatabase.BaseText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.SeriesDatabase.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

</resources>