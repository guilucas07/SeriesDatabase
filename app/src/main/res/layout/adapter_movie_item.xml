<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="180dp"
        android:layout_height="300dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        tools:background="@color/md_blue_100"
        android:layout_marginTop="4dp">

    <ImageView
            android:id="@+id/imageMoviePoster"
            android:layout_width="170dp"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:importantForAccessibility="no"
            android:scaleType="fitXY"
            android:src="@drawable/ic_image_placeholder"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/imageMoviePoster"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/textMovieTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:lines="1"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:layout_marginEnd="4dp"
                style="@style/Text.Body"
                android:textColor="@color/md_white_1000"
                android:maxLines="2"
                android:textStyle="bold"
                tools:text="Titanic"/>

        <TextView
                android:id="@+id/textMovieReleaseDate"
                style="@style/Text.Heading.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_below="@+id/textMovieTitle"
                android:layout_marginBottom="8dp"
                android:textColor="@color/md_white_1000"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="10/05/1997"/>

    </RelativeLayout>
</RelativeLayout>
